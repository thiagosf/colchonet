<div class="page-header">
  <h1><%= t('admin.user') %></h1>
</div>
<%= breadcrumb %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('admin.full_name') %></th>
      <th><%= t('admin.email') %></th>
      <th><%= t('admin.location') %></th>
      <th><%= t('admin.bio') %></th>
      <th><%= t('admin.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr>
        <td><%= admin_user.full_name %></td>
        <td><%= admin_user.email %></td>
        <td><%= admin_user.location %></td>
        <td><%= admin_user.bio %></td>
        <td>
          <%= show_link [:admin, admin_user] %>
          <%= edit_link edit_admin_user_path(admin_user) %>
          <%= destroy_link [:admin, admin_user] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @admin_users %>
