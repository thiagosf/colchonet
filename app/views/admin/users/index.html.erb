<div class="page-header">
  <h1><%= t('site.admin_user') %></h1>
</div>
<%= breadcrumb %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('site.full_name') %></th>
      <th><%= t('site.email') %></th>
      <th><%= t('site.location') %></th>
      <th><%= t('site.bio') %></th>
      <th><%= t('site.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr>
        <td><%= admin_user.full_name %></td>
        <td><%= admin_user.email %></td>
        <td><%= admin_user.location %></td>
        <td><%= admin_user.bio %></td>
        <td>
          <%= show_link admin_user %>
          <%= edit_link edit_admin_user_path(admin_user) %>
          <%= destroy_link admin_user %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
