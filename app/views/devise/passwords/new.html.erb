<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
  <h2>Esqueceu a senha pagaré?</h2>
  <%= devise_error_messages! %>
  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
  <br>
  <%= f.button "Enviar instruções", class: "btn btn-lg btn-primary btn-block" %>
  <div class="links">
    <hr />
    <%= render "devise/shared/links" %>
  </div>
<% end %>

