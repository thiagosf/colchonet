<!doctype html>
<html>
<head>
  <title><%= @meta_title %></title>
  <%= stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", media: "all" %>
  <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'admin/application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar-wrapper navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="row">
        <div class="navbar navbar-inverse navbar-static-top" role="navigation">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to @meta_title, "/admin", :class => "navbar-brand" %>
            </div>
            <%= render 'layouts/menu' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-3 col-md-2 sidebar">
        <ul class="nav nav-sidebar">
          <% @nav.each do |model| %>
            <% @class_top_nav = if model == controller.controller_name then 'active' else '' end %>
            <li class="<%= @class_top_nav %>"><%= link_to t( 'site.' + model ), send("admin_#{model}_path", model)  %></li>
          <% end %>
        </ul>
      </div>
      <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <%= yield %>
        <hr class="featurette-divider">
        <footer>
          <p class="pull-right">
            <a href="#"><%= t('site.back_to_top') %></a>
          </p>
          <p>
            &copy; <%= Time.now.year %> <%= @meta_title %> 
            &middot; <%= link_to t('site.about'), '/admin/about', { :data => { :toggle => 'modal', :target => '#mainModal' } } %>
          </p>
        </footer>
      </div>
    </div>
  </div>
  <div class="modal fade" id="mainModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
      </div>
    </div>
  </div>
</body>
</html>